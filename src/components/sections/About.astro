---
import Section from '../Section.astro';

import { basics } from '@cv';
const { summary } = basics;
---

<Section title='About me'>
    <p>
        {summary}
    </p>
</Section>

<style>
    p {
        text-wrap: balance;
    }

    @media (prefers-color-scheme: dark) {
        p {
            color: #bebebe;
        }
    }
</style>
