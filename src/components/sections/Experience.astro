---
import Section from '../Section.astro';

import { work } from '@cv';
---

<Section title='Experience'>
    <ul>
        {
            work.map(({ name, startDate, endDate, position, summary, url }) => {
                const monthNames = [
                    'January',
                    'February',
                    'March',
                    'April',
                    'May',
                    'June',
                    'July',
                    'August',
                    'September',
                    'October',
                    'November',
                    'December',
                ];
                const startWork = {
                    startYear: new Date(startDate).getFullYear(),
                    startMonth: new Date(startDate).getMonth(),
                };
                const endYear =
                    endDate != null
                        ? new Date(endDate).getFullYear()
                        : 'Present';
                const { startYear, startMonth } = startWork;
                const years = `${startYear} / ${monthNames[startMonth]}  - ${endYear}`;

                return (
                    <li>
                        <article>
                            <header>
                                <div>
                                    <h3>
                                        <a
                                            href={url}
                                            title={`check ${name}`}
                                            target='_blank'
                                        >
                                            {name}
                                        </a>
                                    </h3>
                                    <h4>{position}</h4>
                                </div>

                                <time>{years}</time>
                            </header>

                            <footer>
                                <p>{summary}</p>
                            </footer>
                        </article>
                    </li>
                );
            })
        }
    </ul>
</Section>

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    article h3 {
        font-weight: 500;
        color: #111;
    }

    article a {
        color: #111;
    }

    article a:hover {
        text-decoration: underline;
    }

    article h4 {
        color: #222;
        font-weight: 400;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }

    time {
        color: #555;
        font-size: 0.85rem;
        min-width: 102px;
    }

    @media (width <= 700px) {
        time {
            text-align: right;
        }
    }

    @media (prefers-color-scheme: dark) {
        article h4,
        time,
        p {
            color: #bebebe;
        }
        footer span {
            background: #d3cccc;
            color: #bebebe;
        }

        article a {
            color: #bebebe;
        }
    }
</style>
