---
import Section from "../Section.astro";

import { work } from "@cv";
---

<Section title="Experience">
  <ul>
    {
      work.map(
        ({ name, startDate, endDate, position, summary, highlights, url }) => {
          const startYear = new Date(startDate).getFullYear();
          const startMonth = new Date(startDate).getMonth();
          const monthNames =  [
            "January",
            "February",
            "March",
            "April",
            "May",
            "June",
            "July",
            "August",
            "September",
            "October",
            "November",
            "December",
          ];
          const startWork = {
            startYearo: new Date(startDate).getFullYear(),
            startMontho: new Date(startDate).getMonth(),
          };
          const endYear =
            endDate != null ? new Date(endDate).getFullYear() : "Actual";
          const { startYearo, startMontho } = startWork;
          const years = `${startYearo} / ${monthNames[startMontho]}  - ${endYear}`;

          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3>
                      <a href={url} title={`Ver ${name}`} target="_blank">
                        {name}
                      </a>
                    </h3>
                    <h4>{position}</h4>
                  </div>

                  <time>{years}</time>
                </header>

                <footer>
                  <p>{summary}</p>
                </footer>
              </article>
            </li>
          );
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  article h4 {
    color: #222;
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }

  @media (prefers-color-scheme: dark) {
    article h4 {
      color: #ebe0e0;
    }
    footer span {
      background: #d3cccc;
      color: #181414;
    }

    article a {
      color: #000000;
    }
  }
</style>
